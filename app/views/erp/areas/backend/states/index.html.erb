<% content_for :title do %>
    <%= t('.states') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-bookmark-o"></i> <%= t('.states') %>
<% end %>

<% content_for :page_toolbar do %>
    <%= erp_component('button/create', {
        text: t('.create'),
        href: erp_areas.new_backend_state_path,
        class: 'btn-sm'
    }) %>
<% end %>

<%= erp_datalist(
    url: erp_areas.list_backend_states_path,
    keywords: [
        {
            text: t('.name'), name: 'name'
        },
        {
            text: t('.code'), name: 'code'
        }
    ],
    actions: [
        {
            text: '<i class="fa fa-check"></i> '+t('.archive'),
            url: erp_areas.archive_all_backend_states_path,
            data_method: 'PUT'
        },
        {
            text: '<i class="fa fa-exclamation"></i> '+t('.unarchive'),
            url: erp_areas.unarchive_all_backend_states_path,
            data_method: 'PUT'
        },
        {
            divider: true
        },
        {
            text: '<i class="fa fa-trash"></i> '+t('.delete'),
            url: erp_areas.delete_all_backend_states_path,
            data_method: 'DELETE',
            data_confirm: t('.delete_confirm')
        }
    ],
    columns: [
        {
            text: t('.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('.code'), name: 'code', value: true, checked: true
        },
        {
            text: t('.status'), name: 'status', value: true, checked: true
        },
        {
            text: t('.creator'), name: 'creator', value: true, checked: true
        },
        {
            text: t('.created_at'), name: 'created_at', value: true, checked: true
        }
    ]
) %>    